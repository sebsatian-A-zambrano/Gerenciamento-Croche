{
  "version": 2,
  "buildCommand": "pnpm run vercel-build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "env": {
    "VITE_API_BASE_URL": "@vite_api_base_url"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    }
  ],
  "routes": [
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
